{
    "name": "getpop/queriedobject",
    "type": "library",
    "description": "Adds support to query single objects (users, posts, etc) in the request",
    "keywords": [
        "PoP",
        "queriedobject"
    ],
    "homepage": "https://github.com/getpop/queriedobject",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php" : "~7.1",
        "getpop/engine": "dev-master",
        "getpop/migrate-queriedobject": "dev-master"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": ">=9.2",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoP\\QueriedObject\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\QueriedObject\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -c phpstan.neon.dist --memory-limit 256K"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
